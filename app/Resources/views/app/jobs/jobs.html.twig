					<thead>
						<tr>
							<th>Dénomination</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for job in jobs %}
						<tr>
							<th>{{ job.job }}</th>
							<th>
								</a>
								<a href="#" class="btn btn-primary btn-xs">
									<i class="fa fa-pencil"></i>
								</a>
								<button type="button" 
										class="btn btn-danger btn-xs"
										data-toggle="modal"
										data-target="#modalDelete"
										data-id="{{ job.id }}"
										data-name="{{ job.job }}"
										data-link="/jobDelete/"
										>
									<i class="fa fa-trash-o"></i>
								</button>
							</th>
						</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>

			{# display navigation #}
			{{ knp_pagination_render(pagination) }}

		</div>
		<!--/row -->
	</section>
</section>

<!--main content end-->
{% endblock %}
