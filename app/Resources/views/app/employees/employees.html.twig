{% extends 'layout.html.twig' %}

{% block content %}
<!-- **********************************************************************************************************************************************************
	 MAIN CONTENT
	 *********************************************************************************************************************************************************** -->
<!--main content start-->
<section id="main-content">
	<section class="wrapper">

		<h3><i class="fa fa-angle-right"></i> Gestion des employés</h3>
		<a class="btn btn-success btn-sm pull-right" href="{{ path('employee_edit', {'id': 0 }) }}">Ajouter un employé</a>

		<div class="row">
			<div class="col-lg-12 main-chart">
				<table class="table table-bordered table-striped table-condensed">
					<thead>
						<tr>
							<th>Dénomination</th>
							<th>Email</th>
							<th>Métier</th>
							<th>Coût (jour)</th>
							<th>Embauche</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for employee in pagination %}
						<tr {% if (employee.status == false) %} class="archive" {% endif %}>			
							<th>{{ employee.prenom }} {{ employee.nom | upper }}</th>
							<th>{{ employee.email }}</th>
							<th>{{ employee.job.job }}</th>
							<th>{{ employee.coutJour }} €</th>
							<th>{{ employee.dateEmbauche|date('d-m-Y') }}</th>
							<th>
								<a href="{{ path('employee_time', {'id': employee.id }) }}" class="btn btn-success btn-xs">
								   <i class="fa fa-clock-o"></i>
								</a>
								<a href="{{ path('employee_edit', {'id': employee.id }) }}"

									{% if (employee.status == false) %} 
									class="btn btn-primary btn-xs isDisabled" 
									{% else %}
									class="btn btn-primary btn-xs"							   
									{% endif %}>
									<i class="fa fa-pencil"></i>
								</a>
								<a href="{{ path('employee_archive', {'id': employee.id }) }}" class="btn btn-danger btn-xs">
									<i class="fa fa-trash-o"></i>
								</a>
							</th>
						</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>

			{# display navigation #}
			{{ knp_pagination_render(pagination) }}

		</div>
		<!--/row -->
	</section>
</section>

<!--main content end-->
{% endblock %}
