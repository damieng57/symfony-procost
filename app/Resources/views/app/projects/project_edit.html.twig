{% extends 'layout.html.twig' %}

{% block content %}
<!-- **********************************************************************************************************************************************************
	  MAIN CONTENT
	  *********************************************************************************************************************************************************** -->
<!--main content start-->
<section id="main-content">
	<section class="wrapper">

		<h3><i class="fa fa-angle-right"></i> Edition d'un projet</h3>

		<div class="row">
			<div class="col-lg-12">
				<div class="row">
					<div class="form-panel">
						{{ form_start(form, { 'action': path('project_edit', { 'id' : (form.id.vars.value == "") ? 0 : form.id.vars.value } ), 'attr': { 'class': 'form-horizontal style-form' } }) }}
							<div class="form-group">

								{{ form_label(form.intitule, form.intitule.vars.label, {'label_attr': {'class': 'col-sm-2 col-sm-2 control-label'}}) }}
								<div class="col-sm-10">
									{{ form_errors(form.intitule) }}
									{{ form_widget(form.intitule, {'attr': {'class' : 'form-control'}}) }}
								</div>

							</div>
							<div class="form-group">

								{{ form_label(form.description, form.description.vars.label, {'label_attr': {'class': 'col-sm-2 col-sm-2 control-label'}}) }}
								<div class="col-sm-10">
									{{ form_errors(form.description) }}
									{{ form_widget(form.description, {'attr': {'class' : 'form-control'}}) }}
								</div>

							</div>
							<div class="form-group">

								{{ form_label(form.type, form.type.vars.label, {'label_attr': {'class': 'col-sm-2 col-sm-2 control-label'}}) }}
								<div class="col-sm-10">
									{{ form_errors(form.type) }}
									{{ form_widget(form.type, {'attr': {'class' : 'form-control'}}) }}
								</div>

							</div>
							<div class="form-group">
								{{ form_label(form.livre, form.livre.vars.label, {'label_attr': {'class': 'col-sm-2 col-sm-2 control-label'}}) }}
								<div class="col-sm-10">
									{{ form_errors(form.livre) }}
									{{ form_widget(form.livre, {'attr': {'class' : 'form-control'}}) }}
								</div>
							</div>
							<div class="form-group">

								{{ form_label(form.dateCreation, form.dateCreation.vars.label, {'label_attr': {'class': 'col-sm-2 col-sm-2 control-label'}}) }}
								<div class="col-sm-10">
									{{ form_errors(form.dateCreation) }}
									{{ form_widget(form.dateCreation, {'attr': {'type' : 'date', 'class' : 'form-control'}}) }}
								</div>
							</div>
							{{ form_rest(form) }}
							<button type="submit" class="btn btn-sm btn-success">Enregistrer</button>
						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
		<!--/row -->
	</section>
</section>

<!--main content end-->
{% endblock %}
