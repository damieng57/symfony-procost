<div class="row">
	<div class="form-panel">
		<h4 class="mb"><i class="fa fa-angle-right"></i> Ajouter un temps</h4>
		{{ form_start(form, { 'action': path('project_time', { 'id' : project.id } ), 'attr': { 'class': 'form-horizontal style-form' } }) }}
			<div class="form-group">
				{{ form_label(form.employee, form.employee.vars.label, {'label_attr': {'class': 'col-sm-2 col-sm-2 control-label'}}) }}
				<div class="col-sm-10">
					{{ form_errors(form.employee) }}
					{{ form_widget(form.employee, {'attr': {'class' : 'form-control'}}) }}
				</div>
			</div>
			<div class="form-group">

				{{ form_label(form.day, form.day.vars.label, {'label_attr': {'class': 'col-sm-2 col-sm-2 control-label'}}) }}
				<div class="col-sm-10">
					{{ form_errors(form.day) }}
					{{ form_widget(form.day, {'attr': {'class' : 'form-control'}}) }}
				</div>

			</div>
			{{ form_rest(form) }}
			<button type="submit" class="btn btn-sm btn-success">Enregistrer</button>
		{{ form_end(form) }}
	</div>
</div>






